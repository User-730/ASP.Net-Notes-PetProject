@model EventAction

<form id="Edit" class="details" method="post" asp-controller="EventList" asp-action="Edit">
    <input name="Id" type="hidden" value="@Model.Id" />
    <div>
        <label for="Title">Название</label>
        <input name="Title" type="text" value="@Model.Title" required minlength="2" maxlength="12" />
    </div>

    <div>
        <label for="EventDate">Дата совершения</label>
        <input name="EventDate" type="date" value="@Calendar.FormatToDateString(Model.EventDate)"/>
    </div>

    <div>
        <label for="Type">Тип действия</label>
        <input name="Type" type="text" value="@Model.Type" required minlength="3" maxlength="15" />
    </div>

    <div>
        <label for="WorkerId">Исполнитель:</label> 
        <div>@Model.Worker.FirstName @Model.Worker.LastName</div>
    </div>
    <input name="WorkerId" type="text" value="@Model.WorkerId" hidden />
</form>

<br/>

<div class="detailButtons">
    <div>
        <input form="Edit" type="submit" value="Изменить" />
    </div>
    <div>
        <button>
            <a class="clear" asp-controller="EventList" asp-action="Index">Вернуться к списку</a>
        </button>
    </div>
</div>